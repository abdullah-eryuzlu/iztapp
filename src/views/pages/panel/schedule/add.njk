{% extends "panel/templates/global.njk" %}

{% block wrapper %}
<h1>Create Weekly Schedule</h1>

<form action="/api/add/weeklySchedule" method="POST">
	<label for="semester">Semester</label>
	<input type="number" name="semester" id="semester" required>
	<label for="type">Type</label>
	<select name="type" id="type" required>
		{}
	</select>
	<button type="submit">Add</button>
</form>

<form action="/api/add/weeklySchedule" method="POST">
	<div class="form-group">
		<label for="semester">Enter semester</label>
		<input type="number" class="form-control" id="semester" name="semester"
			placeholder="Enter semester" required>
	</div>
	<div class="form-group">
		<label for="type">Enter email</label>
		<select class="form-control" id="type" name="type">
			<option value="0">ungraduated</option>
			<option value="1">graduated</option>
			<option value="2">phd</option>
		</select>
	</div>
	<button type="submit" class="btn btn-primary">Add Schedule</button>
</form>
{% endblock %}
