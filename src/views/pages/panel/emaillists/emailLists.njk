{% extends "panel/templates/global.njk" %}

{% block wrapper %}
<h1>Email Lists</h1>

<a href="/panel/emailLists/add">
	<button type="button" class="btn btn-dark">Add New Email List
	</button>
</a>
<a href="/panel/emailLists/import">
	<button type="button" class="btn btn-dark">Import New Email List
	</button>
</a>


<br>
<hr>

<table class="table">
	<thead>
		<tr>
			<th scope="col">Email List</th>
			<th scope="col">Option</th>
		</tr>
	</thead>
	<tbody>
		{% for emailList in emailLists %}
		<tr>
			<td>{{ emailList.name }}</td>
			<td><a href="/panel/emailLists/{{ emailList._id }}">Edit/Delete</a></td>
		</tr>
		{% endfor %}
	</tbody>
</table>


{% endblock %}
