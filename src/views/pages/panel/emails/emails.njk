{% extends "panel/templates/global.njk" %}

{% block wrapper %}
<h1>Emails</h1>

<a href="/panel/emails/add">
	<button type="button" class="btn btn-dark">Add New Email
	</button>
</a>

<br>
<hr>

<table class="table">
	<thead>
		<tr>
			<th scope="col">Email</th>
			<th scope="col">Option</th>
		</tr>
	</thead>
	<tbody>
		{% for email in emails %}
		<tr>
			<td>{{ email.email }}</td>
			<td><a href="/api/delete/email/{{ email._id }}">Delete</a></td>
		</tr>
		{% endfor %}
	</tbody>
</table>


{% endblock %}
